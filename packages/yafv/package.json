{
  "name": "@fhir-toolkit/yafv",
  "version": "1.1.0",
  "description": "Yet Another FHIR Validator - FHIR validator with FHIRPath, terminology, and profile support",
  "keywords": [
    "fhir",
    "validator",
    "hl7",
    "healthcare",
    "fhirpath",
    "r4",
    "r4b",
    "r5",
    "terminology"
  ],
  "author": "Roberto Araneda <robaraneda@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "fhir-validate": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "fhirpath": "^3.15.1",
    "glob": "^10.3.10",
    "lru-cache": "^10.2.0",
    "tar": "^7.4.0"
  },
  "peerDependencies": {
    "@fhir-toolkit/r4-specs": ">=0.1.0",
    "@fhir-toolkit/r4b-specs": ">=0.1.0",
    "@fhir-toolkit/r5-specs": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@fhir-toolkit/r4-specs": {
      "optional": true
    },
    "@fhir-toolkit/r4b-specs": {
      "optional": true
    },
    "@fhir-toolkit/r5-specs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@fhir-toolkit/r4-specs": "workspace:*",
    "@fhir-toolkit/r4b-specs": "workspace:*",
    "@fhir-toolkit/r5-specs": "workspace:*",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false
}
